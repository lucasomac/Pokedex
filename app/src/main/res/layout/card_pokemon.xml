<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pokemonResume"
            type="br.com.lucolimac.pokedex.domain.entity.PokemonList.PokemonResume" />
    </data>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@drawable/background_card_pokemon"
        android:elevation="3dp"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0.5dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPokemonNumber"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="4dp"
            android:gravity="end|center_vertical"
            android:lineSpacingExtra="0sp"
            android:text="@{pokemonResume.number}"
            android:textAppearance="@style/pokemonNumberStyle"
            tools:text="#304" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:background="@drawable/background_pokemon_name"
            app:cardCornerRadius="7dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPokemonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:text="@{pokemonResume.name}"
                android:textAppearance="@style/pokemonNameStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Aron" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPokemonImage"
            imageUrl="@{pokemonResume.imageUrl}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/background_pokemon_image"
            tools:srcCompat="@drawable/aron" />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
</layout>